{
  "version": 2,
  "buildCommand": "cd client && yarn install && yarn build",
  "outputDirectory": "client/dist",
  "installCommand": "yarn install",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 512
    },
    "api/openai-chat.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024
    },
    "api/ai-business-fit-analysis.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
