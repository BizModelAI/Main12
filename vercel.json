{
  "version": 2,
  "buildCommand": "cd client && yarn install && yarn build",
  "outputDirectory": "client/dist",
  "installCommand": "yarn install",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
